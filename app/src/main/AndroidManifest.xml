<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.anbetter.xplayer">

    <application
        android:name="com.anbetter.xplayer.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.anbetter.xplayer.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.anbetter.xplayer.LiveDemoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"/>

        <activity
            android:name="com.anbetter.xplayer.LiveListActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.anbetter.xplayer.LiveRoomActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.anbetter.xplayer.ScrollingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.anbetter.xplayer.PLScrollingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.anbetter.xplayer.XPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>